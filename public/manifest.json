{
  "name": "React Chrome Extension",
  "description": "A React-powered Chrome Extension",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": [
    "sidePanel"
  ],
  "action": {
    "default_title": "Open side panel"
  },

  "side_panel": {
    "default_path": "index.html"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}
